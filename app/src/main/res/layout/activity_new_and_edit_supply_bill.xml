<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activity.manage.supply.supplyBill.NewAndEditSupplyBillActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/colorBackground"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="30dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:src="@drawable/ic_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="Add New Supply Bill"
            android:textColor="@color/colorItemTitle"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_SupplyName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/constraint_layout_ripple"
        android:clickable="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_layout">

        <TextView
            android:id="@+id/txtSupplyNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supply Name: "
            android:textColor="@color/colorItemTitle"
            android:textSize="@dimen/settingTitleSize"
            android:textStyle="italic|bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtSupplyNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water"
            android:layout_marginLeft="6dp"
            android:textColor="@color/colorItemTitle"
            android:textSize="@dimen/settingTitleSize"
            app:layout_constraintTop_toTopOf="@id/txtSupplyNameTitle"
            app:layout_constraintBottom_toBottomOf="@id/txtSupplyNameTitle"
            app:layout_constraintLeft_toRightOf="@id/txtSupplyNameTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_Address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/constraint_layout_ripple"
        android:clickable="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_SupplyName">

        <TextView
            android:id="@+id/txtAddressTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:textColor="@color/colorItemTitle"
            android:textSize="@dimen/settingTitleSize"
            android:textStyle="italic|bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtAddressValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:background="@null"
            android:backgroundTint="@color/colorHint"
            android:hint="Enter Address"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/colorItemTitle"
            android:textColorHint="@color/colorHint"

            app:layout_constraintTop_toTopOf="@id/txtAddressTitle"
            app:layout_constraintBottom_toBottomOf="@id/txtAddressTitle"
            app:layout_constraintLeft_toRightOf="@id/txtAddressTitle"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_DayBought"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/constraint_layout_ripple"
        android:clickable="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_Address">

        <TextView
            android:id="@+id/txtBonsaiDayPlantedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day Bought: "
            android:textColor="@color/colorItemTitle"
            android:textSize="@dimen/settingTitleSize"
            android:textStyle="italic|bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtBonsaiDayPlanted"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical"
            android:text="today"
            android:textColor="@color/colorItemTitle"
            android:textSize="@dimen/settingTitleSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txtBonsaiDayPlantedTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_TotalSupply"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/constraint_layout_ripple"
        android:clickable="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_DayBought">

        <TextView
            android:id="@+id/txtSupplyBoughtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supply Bought: "
            android:textColor="@color/colorItemTitle"
            android:textSize="@dimen/settingTitleSize"
            android:textStyle="italic|bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtSupplyBoughtValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:background="@null"
            android:backgroundTint="@color/colorHint"
            android:hint="Enter Total Bought"
            android:inputType="numberSigned"
            android:maxLength="24"
            android:maxLines="1"
            android:textColor="@color/colorItemTitle"
            android:textColorHint="@color/colorHint"

            app:layout_constraintTop_toTopOf="@id/txtSupplyBoughtTitle"
            app:layout_constraintBottom_toBottomOf="@id/txtSupplyBoughtTitle"
            app:layout_constraintLeft_toRightOf="@id/txtSupplyBoughtTitle"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_TotalMoneySupply"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/constraint_layout_ripple"
        android:clickable="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_TotalSupply">

        <TextView
            android:id="@+id/txtMoneyBoughtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Money Bought: "
            android:textColor="@color/colorItemTitle"
            android:textSize="@dimen/settingTitleSize"
            android:textStyle="italic|bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtMoneyBoughtValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:background="@null"
            android:backgroundTint="@color/colorHint"
            android:hint="Enter Money Bought"
            android:inputType="numberSigned"
            android:maxLength="24"
            android:maxLines="1"
            android:textColor="@color/colorItemTitle"
            android:textColorHint="@color/colorHint"

            app:layout_constraintTop_toTopOf="@id/txtMoneyBoughtTitle"
            app:layout_constraintBottom_toBottomOf="@id/txtMoneyBoughtTitle"
            app:layout_constraintLeft_toRightOf="@id/txtMoneyBoughtTitle"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_ripple"
        android:clickable="true"
        android:text="@string/submit"
        android:textColor="@color/colorItemTitle"
        android:textSize="@dimen/buttonTextSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_TotalMoneySupply" />
</androidx.constraintlayout.widget.ConstraintLayout>